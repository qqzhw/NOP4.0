@model ProductModel.ProductAttributeMappingModel

@using Nop.Core.Domain.Catalog

@{
    Layout = "_AdminPopupLayout";

    //page title
    ViewBag.Title = T("Admin.Catalog.Products.ProductAttributes.Attributes.ValidationRules").Text;

    var attributeControlType = (AttributeControlType)Model.AttributeControlTypeId;
}

@if (ViewBag.RefreshPage == true)
{
    <script type="text/javascript">
        try {window.opener.document.forms['@(Context.Request.Query["formId"])'].@(Context.Request.Query["btnId"]).click();}
        catch (e){}
        window.close();
    </script>
}

<form asp-controller="Product" asp-action="ProductAttributeValidationRulesPopup"
      asp-route-btnId="@Context.Request.Query["btnId"]"
      asp-route-formId="@Context.Request.Query["formId"]">
    <div class="content-header clearfix">
        <h1 class="pull-left">
            @T("Admin.Catalog.Products.ProductAttributes.Attributes.ValidationRules")
        </h1>
        <div class="pull-right">
            &nbsp;
        </div>
    </div>
    <div class="content">
        <div class="form-horizontal">
            <div class="panel-group">
                <div class="panel panel-default panel-popup">
                    <div class="panel-body">
                        @if (!Model.ValidationRulesAllowed)
                        {
                            <p>This attribute type cannot have validation rules</p>
                        }

                        <div class="form-group" @(attributeControlType != AttributeControlType.TextBox && attributeControlType != AttributeControlType.MultilineTextbox ? Html.Raw("style='display: none;'") : null)>
                            <div class="col-sm-3">
                                <nop-label asp-for="ValidationMinLength" />
                            </div>
                            <div class="col-sm-9">
                                <nop-editor asp-for="ValidationMinLength" />
                                <span asp-validation-for="ValidationMinLength"></span>
                            </div>
                        </div>
                        <div class="form-group" @(attributeControlType != AttributeControlType.TextBox && attributeControlType != AttributeControlType.MultilineTextbox ? Html.Raw("style='display: none;'") : null)>
                            <div class="col-sm-3">
                                <nop-label asp-for="ValidationMaxLength" />
                            </div>
                            <div class="col-sm-9">
                                <nop-editor asp-for="ValidationMaxLength" />
                                <span asp-validation-for="ValidationMaxLength"></span>
                            </div>
                        </div>
                        <div class="form-group" @(attributeControlType != AttributeControlType.FileUpload ? Html.Raw("style='display: none;'") : null)>
                            <div class="col-sm-3">
                                <nop-label asp-for="ValidationFileAllowedExtensions" />
                            </div>
                            <div class="col-sm-9">
                                <nop-editor asp-for="ValidationFileAllowedExtensions" />
                                <span asp-validation-for="ValidationFileAllowedExtensions"></span>
                            </div>
                        </div>
                        <div class="form-group" @(attributeControlType != AttributeControlType.FileUpload ? Html.Raw("style='display: none;'") : null)>
                            <div class="col-sm-3">
                                <nop-label asp-for="ValidationFileMaximumSize" />
                            </div>
                            <div class="col-sm-9">
                                <nop-editor asp-for="ValidationFileMaximumSize" />
                                <span asp-validation-for="ValidationFileMaximumSize"></span>
                            </div>
                        </div>
                        <div class="form-group" @(attributeControlType != AttributeControlType.TextBox && attributeControlType != AttributeControlType.MultilineTextbox ? Html.Raw("style='display: none;'") : null)>
                            <div class="col-sm-3">
                                <nop-label asp-for="DefaultValue" />
                            </div>
                            <div class="col-sm-9">
                                <nop-editor asp-for="DefaultValue" />
                                <span asp-validation-for="DefaultValue"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-9 col-sm-offset-3">
                                <button type="submit" class="btn btn-primary">
                                    @T("Admin.Common.Save")
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>